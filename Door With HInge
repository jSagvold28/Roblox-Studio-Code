-make a ClickDetector on the Door iside of CLickToOpen
-add a Script inside of the model (ClickToOpen)

-------------------
-------SCRIPT-------
--------------------

local TweenService = game:GetService("TweenService")
local hinge = script.Parent.Hinge
local clickDetector = script.Parent.Door.ClickDetector
local open = true

local openDoor = {}
openDoor.CFrame = hinge.CFrame * CFrame.Angles(0, math.rad(90), 0)

local closeDoor = {}
closeDoor.CFrame = hinge.CFrame * CFrame.Angles(0, 0, 0)

local tweenInfo = TweenInfo.new(1)
local tweenOpen = TweenService:Create(hinge, tweenInfo, openDoor)
local tweenClose = TweenService:Create(hinge, tweenInfo, closeDoor)

clickDetector.MouseClick:Connect(function(player)
	if open == true then
		open = false
		tweenClose:Play()
	elseif open == false then
		open = true
		tweenOpen:Play()
	end
end)
